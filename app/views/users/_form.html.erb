<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :Login, style: "display: block" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= form.label :Hasło, style: "display: block" %>
  <%= form.password_field :password, id: :student_password, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= form.label :Powtórz_hasło, style: "display: block" %>
  <%= form.password_field :password_confirmation, id: :student_password_confirmation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Imię, style: "display: block" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Nazwisko, style: "display: block" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Zatwierdź", class: "btn btn-dark" %>
  </div>
<% end %>
